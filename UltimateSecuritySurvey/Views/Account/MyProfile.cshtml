@model UltimateSecuritySurvey.Models.UserAccount

@{
    ViewBag.Title = "My Profile";
    ViewBag.PageHeader = Model.userName;
}

<div class="row">
    <div class="large-11 columns panel">
        <h5>Assigned Surveys</h5>
        @Html.Partial("SurveyListPartial", (IEnumerable<UltimateSecuritySurvey.Models.CustomerSurvey>)ViewBag.Surveys)
    </div>
</div>

@section Sidebar{
    <div class="panel">
        <h5>Profile:</h5>
        
        <img src="@Url.Content(ViewBag.AvaUrl)" alt="Ava" />

        <h6>Name</h6>
        <p>
            @Html.DisplayFor(model => model.firstName)
            @Html.DisplayFor(model => model.lastName)
        </p>

        <h6>Role</h6>
        <p>@ViewBag.UserRole</p>

        @Html.ActionLink("Back to Dashboard", "Index", "Home")
    </div>   
}




