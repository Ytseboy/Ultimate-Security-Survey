@model IEnumerable<UltimateSecuritySurvey.Models.QuestionCategory>

@{
    ViewBag.Title = "Categories";
    ViewBag.PageHeader = "Categories";
    ViewBag.SidebarHeader = "Related:";
}

@section Sidebar{
   <div class="panel scrollable-medium">
     <h5>Related: </h5>
     @Html.ActionLink("Add New Category", "Create")
    </div>
}

<table>
    <tr>
        <th>
            All Categories
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            <div class="iconHolder">
                @Html.ActionLink(" ","Edit",new {id = item.categoryId}, new{ title = "Edit", @class = "step fi-pencil size-24 black" })
                @Html.ActionLink(" ","Details",new {id = item.categoryId}, new{title="Details", @class = "fi-page size-24 black" })

                <a href="@Url.Action("Delete", new {id = item.categoryId})" class="fi-trash size-24 black"
                        title="Delete" data-reveal-id="deleteModal" data-reveal-ajax="true"> </a>
            </div>
        </td>
    </tr>
}
</table>


