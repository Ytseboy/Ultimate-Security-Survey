@model UltimateSecuritySurvey.Models.QuestionCategory

@{
    ViewBag.Title = "Category editor";
}

<h4>@ViewBag.Message</h4>

@using (Html.BeginForm("CreateEdit", "Category")) {
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.categoryId)

        <div class="editor-label">
            <h5>@Html.LabelFor(model => model.categoryName)</h5>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.categoryName)
            @Html.ValidationMessageFor(model => model.categoryName)
        </div>

        <div class="editor-label">
            <h5>@Html.LabelFor(model => model.description)</h5>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
