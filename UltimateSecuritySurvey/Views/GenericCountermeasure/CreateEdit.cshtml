@model UltimateSecuritySurvey.Models.GenericCountermeasure

@{
    ViewBag.Title = "Generic counter measure editor";
}

@using (Html.BeginForm("CreateEdit", "GenericCountermeasure")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.countermeasureId)
        @Html.HiddenFor(model => model.questionId)

    <div class="row">
        <div class="large-9 columns">
            @Html.LabelFor(model => model.Question.questionTextMain)
            <p>@Html.DisplayFor(model => model.Question.questionTextMain)</p>
        </div>
    </div>
    
    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.title)

            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>
    </div>

    <div class="row">
        <div class="large-9 columns">
            @Html.LabelFor(model => model.description)

            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>
    </div>

    <div class="row">
        <div class="large-4 columns">
            @Html.LabelFor(model => model.dateAndTime)

            @Html.EditorFor(model => model.dateAndTime)
            @Html.ValidationMessageFor(model => model.dateAndTime)
        </div>
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.motherCountermeasure, "GenericCountermeasure2")

            @Html.DropDownList("motherCountermeasure", String.Empty)
            @Html.ValidationMessageFor(model => model.motherCountermeasure)
        </div>
    </div>

    <input type="submit" value="Save" class="small button success"/>
}

    @Html.ActionLink("Back to List", "Details", "Question", new {id = Model.questionId }, new { @class="tiny button secondary"})

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
