@model IEnumerable<UltimateSecuritySurvey.Models.AnswerOption>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.answerText)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.answerText)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", "AnswerOption", new { id=item.questionId, number = item.answerNumber }, 
                                                                new {@class="step fi-pencil size-24 black"})

            <a href="@Url.Action("Delete", "AnswerOption", new { id=item.questionId, number = item.answerNumber })" 
                class="fi-trash size-24 black" title="Delete" data-reveal-id="deleteModal" data-reveal-ajax="true"> </a>
        </td>
    </tr>
}

</table>
