@model UltimateSecuritySurvey.Models.Question

@{
    ViewBag.Title = "Question details";
}

<h2>Details</h2>

    <div class="display-label">
         <h5>@Html.DisplayNameFor(model => model.QuestionCategory.categoryName)</h5>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.QuestionCategory.categoryName)
    </div>

    <div class="display-label">
         <h5>@Html.DisplayNameFor(model => model.QuestionType.questionTypeName)</h5>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.QuestionType.questionTypeName)
    </div>

    <div class="display-label">
         <h5>@Html.DisplayNameFor(model => model.questionTextMain)</h5>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.questionTextMain)
    </div>

    <div class="display-label">
         <h5>@Html.DisplayNameFor(model => model.questionTextExtra)</h5>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.questionTextExtra)
    </div>

    <div class="display-label">
         <h5>@Html.DisplayNameFor(model => model.baseLevel2RequirementText)</h5>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.baseLevel2RequirementText)
    </div>

    <div class="display-label">
         <h5>@Html.DisplayNameFor(model => model.additionalInfo)</h5>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.additionalInfo)
    </div>

    <div class="display-label">
         <h5>@Html.DisplayNameFor(model => model.additionalNote)</h5>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.additionalNote)
    </div>

<ul class="button-group">
    <li>@Html.ActionLink("Edit", "Edit", new { id=Model.questionId }, new { @class = "tiny button secondary"})</li>
    <li>@Html.ActionLink("Back to List", "Index", null, new { @class = "tiny button secondary" })</li>
</ul>

<div class="section-container accordion" data-section="accordion">
    <section class="active">
        <p class="title" data-section-title><a href="#">Answer Options</a></p>
        <div class="content" data-section-content>
            <p>
                     @Html.ActionLink("Create New", "Create", "AnswerOption", new { id = Model.questionId }, new { @class="tiny button secondary"})
                     @Html.Partial("AnswerOptionList_Partial", Model.AnswerOptions)
            </p>
        </div>
    </section>
    <section>
        <p class="title" data-section-title><a href="#">Generic countermeasures</a></p>
        <div class="content" data-section-content>
                <p>
                    @Html.ActionLink("Create New", "Create", "GenericCountermeasure", new { id = Model.questionId }, new { @class="tiny button secondary"})
                    @Html.Partial("GenericCountermeasureList_Partial", Model.GenericCountermeasures)
                </p>
        </div>
    </section>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/jsF/foundation/foundation.section.js")
}
