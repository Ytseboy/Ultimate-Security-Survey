<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css/foundation.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" 
      type="image/png" 
      href="../../Content/imgs/favicon.ico">
</head>
<body>
            <nav class="top-bar">
                <ul class="title-area">
					<li class="name"><h1>@Html.ActionLink("Ultimate Security Survey", "Index", "Home")</h1></li>
					<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
				</ul>
                <section class="top-bar-section">
                    <ul>
                        <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                        <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                        <li>@Html.ActionLink("Questions", "Index", "Question")</li>
                        <li>@Html.ActionLink("Customers", "Index", "Customer")</li>
                        <li>@Html.ActionLink("Users", "Index", "User")</li>
                        <li>@Html.ActionLink("Surveys", "Index", "GenericSurvey")</li>
                        <li>@Html.ActionLink("Customer Surveys", "Index", "CustomerSurvey")</li>
                        <li>@Html.ActionLink("About", "Index", "About")</li>
                        
                    </ul>
                    <ul class="right">
                        <li class="divider"></li>
                        <li class="has-dropdown">    
                            @if (Request.IsAuthenticated)
                            {
                                <a href="#">@Html.Encode(User.Identity.Name)</a>
                            }
                            else
                            {
                                //Makes all the pages private
                                Response.Redirect("/Account/Login");
                            }
                            <ul class="dropdown right">
                                <li>@Html.ActionLink("Sign Out", "Logout", "Account")</li>
                            </ul>
                        </li>
                    </ul>
                </section>
            </nav>
        <header>
            <div class="row">
                <div class="large-12 columns">
                    <div class="large-3 columns">
						<h1><img src="@Url.Content("~/Content/imgs/haaga-helia.png")" alt=""></h1>
				    </div>
                    <div class="large-9 columns">
                        <h2>Ultimate Security Survey<br /> <small>Have you tried turning it off and on again?</small></h2>
                    </div>
                </div>
                <hr />
            </div>
        </header>
        <div class="row">
            <div class="large-12 columns">
                <div class="large-9 columns">
                     @RenderBody()
				</div>
             <div class="large-3 columns">
					<h5>Sidebar</h5>
					<ul class="side-nav">
						<li><a href="#">Link 1</a></li>
						<li><a href="#">Link 2</a></li>
						<li><a href="#">Link 3</a></li>
						<li><a href="#">Link 4</a></li>
						<li><a href="#">Link 5</a></li>
					</ul>
				</div>
            </div>
            <hr />
        </div>
        <footer>
			<div class="row">
				<div class="large-12 columns">
					<h5>&copy; 2013</h5>
				</div>
			</div>
		</footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script>
    document.write('<script src= ~/Scripts/jsF/vendor/'
        + ('__proto__' in {} ? 'zepto' : 'jquery')
        + '.js><\/script>');
    </script>

  <script src="~/Scripts/jsF/foundation/foundation.js"></script>
  <script src="~/Scripts/jsF/foundation/foundation.topbar.js"></script>
  <!-- Other JS plugins can be included here -->

  <script>
      $(document).foundation();
  </script>
</body>
</html>
